<Window
    x:Class="JaperApp.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel Padding="12" Spacing="8">
        <CheckBox x:Name="QRCheckBox" Content="QR Code" TabIndex="0"/>
        <CheckBox x:Name="Code128CheckBox" Content="Code 128" TabIndex="1"/>
        <CheckBox x:Name="Code39CheckBox" Content="Code 39" TabIndex="2"/>
        <CheckBox x:Name="Ean13CheckBox" Content="EAN-13" TabIndex="3"/>
        <CheckBox x:Name="Ean8CheckBox" Content="EAN-8" TabIndex="4"/>
        <CheckBox x:Name="ItfCheckBox" Content="ITF" TabIndex="5"/>
        <CheckBox x:Name="DataMatrixCheckBox" Content="Data Matrix" TabIndex="6"/>
        <CheckBox x:Name="Pdf417CheckBox" Content="PDF417" TabIndex="7"/>
        <TextBlock Text="ROI Left (%)"/>
        <TextBox x:Name="RoiLeftBox" TabIndex="8" AutomationProperties.Name="ROI Left"/>
        <TextBlock Text="ROI Top (%)"/>
        <TextBox x:Name="RoiTopBox" TabIndex="9" AutomationProperties.Name="ROI Top"/>
        <TextBlock Text="ROI Width (%)"/>
        <TextBox x:Name="RoiWidthBox" TabIndex="10" AutomationProperties.Name="ROI Width"/>
        <TextBlock Text="ROI Height (%)"/>
        <TextBox x:Name="RoiHeightBox" TabIndex="11" AutomationProperties.Name="ROI Height"/>
        <TextBlock Text="Theme"/>
        <ComboBox x:Name="ThemeComboBox" TabIndex="12" AutomationProperties.Name="Theme">
            <ComboBoxItem Content="System"/>
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Dark"/>
        </ComboBox>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Right" TabIndex="13" AutomationProperties.Name="Save settings"/>
    </StackPanel>
</Window>
